<!-- This views is to change a task's info -->
{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/projects/{{project.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{task.name}}</legend>
                <label class="form-label">Task Name: </label>
                <input 
                    type="text" 
                    name="name" 
                    value="{{ task.name }}"
                    class="form-control"
                >
                <textarea name="description" cols="30" rows="10" placeholder="{{ task.description }}"></textarea>
                <!-- <input 
                    type="text" 
                    name="owner" 
                    value="{{ task.owner }}"
                    class="form-control"
                > -->
            </fieldset>
            <input type="submit" value="Edit Task" class="btn btn-success">
        </form>
    </div>
{% endblock %}