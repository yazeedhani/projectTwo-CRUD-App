{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/projects/{{projectId}}/new" method="POST">
        <fieldset>
            <legend>Create New Task</legend>
            <label class="form-label">Name: </label>
            <input 
                type="text" 
                name="name" 
                placeholder="Task Name"
                class="form-control"
                required
            >
            <br>
            <label class="form-label">Category: </label>
            <select name="category" class="form-control" required>
                <option>Backlog</option>
                <option>Need Help</option>
                <option>In Progress</option>
                <option>In Review</option>
                <option>Ready</option>
            </select>
            <br>
            <label class="form-label">Description:</label>
            <br>
            <textarea name="description" cols="50" rows="10" placeholder="Task description"></textarea>

        </fieldset>
        <input type="submit" value="Create New Task" class="btn btn-success">
    </form>
    <br>
    <a href="/projects/{{ projectId }}/" class="btn btn-success">Go Back</a>
</div>
{% endblock %}