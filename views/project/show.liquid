{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>{{ project.name }}</h2>
        {% if project.owner == userId %}
        <div class="btn-group">

            <a href="/projects/{{ project.id }}/new" class="btn btn-success">Create Task</a>
            <a href="/projects/{{ project.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/projects/{{ project.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
        <div class="row">
            <div class="column"><h2>Backlog</h2>
                {% for task in project.tasks %}
                    {% if task.category == 'Backlog' or task.category == 'backlog'%}
                    <div class="card">
                        <h3>{{ task.name }}</h3>
                        <p>{{ task.owner.username }}</p>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="column"><h2>Need Help</h2></div>
            <div class="column"><h2>In Progress</h2></div>
            <div class="column"><h2>In Review</h2></div>
            <div class="column"><h2>Ready</h2></div>
          </div> 
    </article>
</div>
{% endblock %}