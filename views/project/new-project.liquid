<!-- This view is to create a new project dashboard -->
{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/projects" method="POST">
        <fieldset>
            <legend>Create New Project</legend>
            <label class="form-label">Name: </label>
            <input 
                type="text" 
                name="name" 
                placeholder="Project Name"
                class="form-control"
                required
            >
            <br>
            <label class="form-label">Members:</label>
            <input 
                type="text" 
                name="group" 
                placeholder="Enter groups members separated by a comma"
                class="form-control"
            >
            <br>
            <label class="form-label">Timezone:</label>
            <input type="text" name="timezone" placeholder="Enter your full IANA timezone, Ex. America/Denver" class="form-control" required>
            <p style="font-size: 10px;">* <a href="https://en.wikipedia.org/wiki/List_of_tz_database_time_zones" target="_blank">Not sure what your timezone is? Click here.</a></p>
        </fieldset>
        <input type="submit" value="Create New Project" class="btn btn-success">
    </form>
    <!-- <a href="/projects/{{ task.project.id }}/" class="btn btn-success">Go Back</a> -->
</div>
{% endblock %}