{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/projects/{{project.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{project.name}}</legend>
                <label class="form-label">Project Name: </label>
                <input 
                    type="text" 
                    name="name" 
                    value="{{ project.name }}"
                    class="form-control"
                >
            </fieldset>
            <input type="submit" value="Edit Project" class="btn btn-success">
        </form>
    </div>
{% endblock %}